#!/usr/bin/env bash
set -eo pipefail

# 1. GET ARGS
output_dir=$CNB_OUTPUT_DIR

# 2. GENERATE run.Dockerfile
cat >>"${output_dir}/run.Dockerfile" <<EOL
FROM run-image-curl
EOL

if [[ "${BP_REQUIRES}" == *"dep"* ]]; then
  cat >>"${output_dir}/run.Dockerfile" <<EOL
USER root
RUN echo "Dependency from curl extension" > /from-curl.txt
EOL
fi
